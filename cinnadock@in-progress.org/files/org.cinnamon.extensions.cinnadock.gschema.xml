<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="cinnamon-extensions">
  <enum id='org.cinnamon.extensions.cinnadock.PositionMode'>
    <value value='0' nick='left'/>
    <value value='1' nick='right'/>
    <value value='2' nick='top'/>
    <value value='3' nick='bottom'/>
  </enum>
  <enum id='org.cinnamon.extensions.cinnadock.AutoHideEfect'>
    <value value='0' nick='resize'/>
    <value value='1' nick='rescale'/>
  </enum>

  <schema path="/org/cinnamon/extensions/cinnadock/" id="org.cinnamon.extensions.cinnadock">
    <key name="position" enum="org.cinnamon.extensions.cinnadock.PositionMode">
      <default>'right'</default>
      <summary>Position of the cinnadock</summary>
      <description>Sets the position of the cinnadock in the screen. Allowed values are 'right' or 'left' or 'top' or 'bottom'</description>
    </key>
    <key type="i" name="size">
      <default>48</default>
      <summary>Icon size</summary>
      <description>Sets icon size of the cinnadock.</description>
    </key>
    <key type="b" name="autohide">
      <default>false</default>
      <summary>Enable/disable autohide</summary>
    </key>
    <key name="hide-effect" enum="org.cinnamon.extensions.cinnadock.AutoHideEfect">
      <default>'rescale'</default>
      <summary>Autohide effect</summary>
      <description>Sets the effect of the hide cinnadock. Allowed values are 'resize' or 'rescale'</description>
    </key>
    <key type="d" name="hide-effect-duration">
      <default>0.3</default>
      <summary>Autohide duration</summary>
      <description>Sets the time duration of the autohide effect.</description>
    </key>
    <key type="as" name="cinnadock-apps">
      <default>[ 'gnome-terminal.desktop' ]</default>
      <summary>Cinnadock application list</summary>
      <description>Sets apps visible in cinnadock.</description>
    </key>
  </schema>
</schemalist>
