
const St = imports.gi.St;
const Main = imports.ui.main;
const Tweener = imports.ui.tweener;
const Workspace = imports.ui.workspace

const ANIMATION_TIME = 0.125;

let _oldOnClicked;


function init() {
    _oldOnClicked = Workspace.WindowClone.prototype._onClicked;
}

function enable() {
    Workspace.WindowClone.prototype._onClicked = function(action, actor) {
        this._selected = true;
        if (action.get_button() == 2) {
            this.metaWindow.delete(global.get_current_time());
        } else {
            this.emit('selected', global.get_current_time());
        }
    };
}

function disable() {
    Workspace.WindowClone.prototype._onClicked = _oldOnClicked;
}
